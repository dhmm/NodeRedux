<!DOCTYPE html>
<html>
  <head>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css"  media="screen,projection"/>

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    <title>Todo tutorial</title>
  </head>

  <body>
    <nav class="light-blue lighten-1" role="navigation">
      <div class="nav-wrapper container">

         


        <ul class="left hide-on-med-and-down">
            <a id="btnAddNew" class="btn-floating btn-large waves-effect waves-light red btn-small"><i class="material-icons ">add</i></a>
        </ul>
        <a class="waves-effect  light-blue darken-4 btn btn-small">All</a>
        <a class="waves-effect light-green darken-3 btn btn-small">Completed</a>
        <a class="waves-effect orange darken-4 btn btn-small">Not Completed</a>
        <ul id="nav-mobile" class="sidenav">
          <li><a href="#">Navbar Link</a></li>
        </ul>
        <a href="#" data-target="nav-mobile" class="sidenav-trigger"><i class="material-icons">menu</i></a>
      </div>
    </nav>
   <div class="container">
      <ul class="collection">
        <%
        if(todos) {
          todos.forEach( (todo)=> {
            %>
              <%- include('partials/todo' , { todo:todo }); %>
            <%
          })
        }
        %>
      </ul>
    </div>

    <footer class="page-footer orange">
      <div class="container">
        <div class="row">
          
              Todo app by : <a class="orange-text text-lighten-3" href="https://github.com/dhmm">dhmm</a>
          <br/>&nbsp;
        </div>
      </div>       
    </footer>

    <!-- Modals-->   
    <%- include('modals/mdlNew'); %>
    <%- include('modals/mdlEdit'); %>

    <!--  Scripts-->
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script>
      if (!window.jQuery) { 
        document.write('<script src="bin/jquery-3.2.1.min.js"><\/script>'); 
      }
      </script>
    
     <!-- Compiled and minified JavaScript -->
     <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
            
   
    <script type="text/javascript" src="frontfiles/main.js"></script>
  </body>
</html>