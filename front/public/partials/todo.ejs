<% if(todo) {     
    let color = '';
    let type = '';
    let checked = '';
    let bgColor = '';

    if(todo.type == 'EXTENSION' ) 
    { 
      color = 'orange';  
      type = 'extension'
    } 
    else if(todo.type == 'REQUIREMENT' ) 
    { 
      color = 'blue';
      type = 'feedback';
    } 
    else if(todo.type == 'FEATURE' ) 
    { 
      color = 'green';
      type = 'filter_tilt_shift';
    } 
    else if(todo.type == 'BUG' ) 
    { 
      color = 'red';
      type = 'adb';
    }

    if( todo.completed == true ) {
      checked = 'checked="checked"';
      bgColor = 'lime lighten-4';      
    } else {
      bgColor = '';
    }

    if(show == 'ALL' || show== 'COMPLETED' && todo.completed == true || show == 'UNCOMPLETED' && todo.completed == false ) {
  %>
  <li class="collection-item avatar <%- bgColor %>" >
    <i class="material-icons circle <%- color %>">
      <%- type %>
    </i>
    <span class="title"><%- todo.title %></span>
    <p><%- todo.description %></p>
    <a href="#!" class="secondary-content">
        <label>
          <input id="chkCompleted<%-todo.id%>" onchange="changeTodoStatus(<%-todo.id%>)" type="checkbox" class="filled-in" <%- checked %> />
          <span>&nbsp;</span>
        </label>
      </a>
      
  
        
      <button onclick="openEdit(<%-todo.id%>)" class="waves-effect blue darken-3 btn-small">Edit</button>
      <button onclick="deleteTodo(<%-todo.id%>)" class="waves-effect  red darken-4 btn-small">Delete</button>
  </li>
<% 
  }
} %>